<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginBottom="10dp"
        android:src="@drawable/profilephotoboundary"
        android:id="@+id/profileImage"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/greyColour"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt1"
        android:textColorHint="@color/colorPrimary"
        android:padding="10dp"
        android:layout_toEndOf="@+id/profileImage"

        android:layout_marginTop="10dp">

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/name"
            android:ems="10"

            android:hint="Name"
            />
    </android.support.design.widget.TextInputLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/outerlines"
        android:layout_below="@+id/profileImage"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt2"
                android:textColorHint="@color/colorPrimary"
                android:padding="10dp"
                android:layout_below="@id/txt1"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:clickable="false"
                    android:editable="false"
                    android:text="Harwinder Singh"
                    android:background="@color/browser_actions_bg_grey"
                    android:id="@+id/managerName"
                    android:ems="10"
                    android:hint="Manager Name"
                    />



            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt3"
                android:textColorHint="@color/colorPrimary"
                android:padding="10dp"
                android:layout_below="@id/txt2"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/Place"
                    android:ems="10"
                    android:hint="Current Place"
                    />



            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailtxt"
                android:textColorHint="@color/colorPrimary"
                android:padding="10dp"
                android:layout_below="@id/txt3"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="10dp"
                    android:id="@+id/email"


                    android:ems="10"
                    android:hint="Email"
                    />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt4"
                android:textColorHint="@color/colorPrimary"
                android:padding="10dp"
                android:layout_below="@id/txt3"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="10dp"
                    android:id="@+id/Phone"
                    android:inputType="number"

                    android:ems="10"
                    android:hint="Phone"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adhaartxt"
                android:textColorHint="@color/colorPrimary"
                android:padding="10dp"
                android:layout_below="@id/txt4"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="10dp"
                    android:id="@+id/adhaar"

                    android:inputType="number"
                    android:ems="10"
                    android:hint="Adhaar Card No."
                    />


            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt5"
                android:textColorHint="@color/colorPrimary"
                android:padding="10dp"
                android:layout_below="@id/adhaartxt"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/qualification"
                    android:ems="10"
                    android:hint="Qualifications"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datetxt"
                android:layout_below="@id/adhaartxt"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:editable="false"
                    android:id="@+id/doj"
                    android:clickable="false"
                    android:ems="10"
                    android:text="DD/MM/YYYY"
                    android:background="@color/browser_actions_bg_grey"
                    android:hint="Date of Joining"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/roletxt"
                android:layout_below="@id/adhaartxt"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:editable="false"
                    android:id="@+id/role"
                    android:clickable="false"
                    android:ems="10"
                    android:text="Data Mentor"
                    android:background="@color/browser_actions_bg_grey"
                    android:hint="Role"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt6"

                android:textColorHint="@color/colorPrimary"
                android:padding="10dp"
                android:layout_below="@id/txt5"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/status"

                    android:textColor="#ff0000"
                    android:text="Inactive"
                    android:editable="false"
                    android:clickable="false"
                    android:background="@color/browser_actions_bg_grey"
                    android:hint="Status"
                    />



            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>