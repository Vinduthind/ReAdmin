<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"


    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/boundary"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COURSE"

            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:layout_below="@id/annoucedon"
            android:layout_marginBottom="5dp"
            android:id="@+id/branchname"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"

            android:textStyle="bold"
            android:text="UPDATE on"
            android:id="@+id/annoucedon"

            android:textSize="15dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/branchname"
            android:background="@color/greyColour"
            android:text="EXAMINATION"
            android:id="@+id/examination"

            android:textStyle="bold"
            android:textSize="15dp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:layout_below="@id/annoucedon"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/outerlines"
            android:src="@drawable/ic_delete_foreground"

            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/delete"
            android:layout_centerVertical="true"
            android:id="@+id/edit"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:src="@drawable/ic_edit_foreground"

            android:background="@drawable/outerlines"
            android:scaleType="centerCrop"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>